<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="243.0" prefWidth="369.0" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tommy.loggerapp.HelloController">
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
   <HBox alignment="CENTER" prefWidth="200.0" spacing="16.0" VBox.vgrow="NEVER">
      <children>
         <Label text="Logger">
            <font>
               <Font name="System Bold" size="24.0" />
            </font></Label>
         <HBox prefWidth="200.0" spacing="8.0" style="-fx-border-color: BLACK;" HBox.hgrow="ALWAYS">
            <children>
               <Button mnemonicParsing="false" onAction="#onTodayLogButtonClick" text="Today's Log" />
               <Button layoutX="15.0" layoutY="15.0" mnemonicParsing="false" text="Search" />
               <DatePicker />
               <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save Logs" />
            </children>
            <padding>
               <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
            </padding>
         </HBox>
      </children>
   </HBox>
   <HBox maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" spacing="8.0" VBox.vgrow="ALWAYS">
      <children>
         <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: BLACK;" HBox.hgrow="ALWAYS">
            <content>
               <VBox prefWidth="100.0">
                  <children>
                     <Label fx:id="logPreviewLabel" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" text="No Log Selected">
                        <font>
                           <Font name="System Bold" size="18.0" />
                        </font></Label>
                     <VBox fx:id="logFieldBox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                        <padding>
                           <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </padding>
                     </VBox>
                  </children>
               </VBox>
            </content>
         </ScrollPane>
         <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: BLACK;" HBox.hgrow="NEVER">
            <content>
               <VBox fx:id="logListVBox" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" spacing="4.0">
                  <padding>
                     <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                  </padding>
               </VBox>
            </content>
         </ScrollPane>
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
    <Button maxWidth="1.7976931348623157E308" onAction="#onHelloButtonClick" text="Hello!" VBox.vgrow="ALWAYS" />
</VBox>
